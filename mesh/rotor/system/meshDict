// Join separate patches in just one propellerTip
renameBoundary
{
	
	newPatchNames
	{
		ibdLeadingEdge      {newName propellerTip; type wall;}
        obdLeadingEdge      {newName propellerTip; type wall;}
		mainBox             {newName propellerTip; type wall;}
		ibdTrailingEdge     {newName propellerTip; type wall;}
        obdTrailingEdge     {newName propellerTip; type wall;}
		hub                 {newName propellerTip; type wall;}
		inlet               {newName inlet; type patch;}
        outlet              {newName outlet; type patch;}
	}

}
