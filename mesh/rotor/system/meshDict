FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "mesh";
    object      meshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

surfaceFile "combined.fms";

//minCellSize 0.0025;

maxCellSize 0.01;

//boundaryCellSize 0.05;

// Refine region 
surfaceMeshRefinement
{
    domain
    {
        surfaceFile innerCylinderSmall.stl;
        additionalRefinementLevels 1;
        refinementThickness 10;
    }
}

objectRefinements
{
    box
    {
        type        box;
        additionalRefinementLevels 2;  
        centre      (0.0 0.0 0.0);
        lengthX     0.05;
        lengthY     0.025;
        lengthZ     0.35;
        
    }
}

// Refine the edge features of the mesh
edgeMeshRefinement
{
    edge1
    {
        edgeFile "constant/triSurface/propellerTip.eMesh";
        additionalRefinementLevels 6;
        //cellSize 0.005;
        refinementThickness 0.000001;
    }
}

// Refine the patches within the mesh
localRefinement
{
    ibdLeadingEdge
    {
        //additionalRefinementLevels 5;
        cellSize    0.00055;
        
    }
    obdLeadingEdge
    {
        //additionalRefinementLevels 6;
        cellSize    0.00030;
    }
    mainBox
    {
        additionalRefinementLevels 4;
        
    }
    ibdTrailingEdge
    {
        additionalRefinementLevels 1;
        
    }
    obdTrailingEdge
    {
        additionalRefinementLevels 3;
        
    }
    hub
    {
        additionalRefinementLevels 1;
        
    }
}


// Add inflation layers to the patches
boundaryLayers 
{
    //nLayers 3;
    
    thicknessRatio 1.1;
    allowDiscontinuity 1;
    
    maxFirstLayerThickness 0.5;
     
    patchBoundaryLayers
    {
        ibdLeadingEdge
        {
            nLayers 3;
        }
        obdLeadingEdge
        {
            nLayers 3;
        }
        mainBox
        {
            nLayers 3;
        }
        ibdTrailingEdge
        {
            nLayers 3;
        }
        obdTrailingEdge
        {
            nLayers 3;
        }
    }
    
    optimiseLayer 1;  

    optimisationParameters
    {
        nSmoothNormals 5;
        maxNumIterations 5;
        featureSizeFactor 0.3;
        reCalculateNormals 1;
        relThicknessTol 0.1;
        
        /*nSmoothNormals 15;
		maxNumIterations 15;
		featureSizeFactor 0.1;
		relThicknessTol 0.001;*/
    } 
            
}

meshQualitySettings
{
    //- Maximum non-orthogonality allowed. Set to 180 to disable.
    maxNonOrtho 65;

    //- Max skewness allowed. Set to <0 to disable.
    maxSkewness 2;
}

